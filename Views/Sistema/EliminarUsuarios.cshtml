@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <div class="card mb-4" style="
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            margin: auto;
            max-width: 60%;">
        <div class="card-header">
            <h3>Eliminar Usuario</h3>
        </div>
        <div class="card-body">
            <p style="text-align: center;">¿Estás seguro de que deseas eliminar al usuario con ID: 1?</p>
            <form method="post" action="/Sistema/Usuarios" onsubmit="this.querySelector('button[type=submit]').disabled = true; this.querySelector('button[type=submit]').innerHTML = 'Eliminando...';">
                <input type="hidden" name="UsuarioId" value="1" />
                <div style="text-align: center;">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a href="/Sistema/Usuarios" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
