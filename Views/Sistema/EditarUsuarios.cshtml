@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4">
    <div class="card mb-4" style="
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            margin: auto;
            max-width: 60%;">
        <div class="card-header">
            <h3>Editar Usuario</h3>
        </div>
        <div class="card-body">
            <form method="post" action="/Sistema/Usuarios" onsubmit="this.querySelector('button[type=submit]').disabled = true; this.querySelector('button[type=submit]').innerHTML = 'Guardando...';">
                <input type="hidden" name="UsuarioId" value="1" />

                <div class="form-group">
                    <label for="Nombre">Nombre:</label>
                    <input type="text" id="Nombre" name="Nombre" class="form-control" placeholder="Ingrese el nombre del usuario" required />
                </div>

                <div class="form-group">
                    <label for="Apellido">Apellido:</label>
                    <input type="text" id="Apellido" name="Apellido" class="form-control" required />
                </div>

                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input type="email" id="Email" name="Email" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary mt-2">Guardar Cambios</button>
            </form>
        </div>
    </div>
</div>
