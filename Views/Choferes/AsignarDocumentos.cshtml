@{
    ViewData["Title"] = "Asignar Documentos al Chofer";
}

<h1 class="text-center my-4">Asignar Documentos</h1>
<div class="container">
    <form asp-action="AsignarDocumentos" method="post" enctype="multipart/form-data" class="needs-validation my-4" novalidate>
        <div class="mb-3">
            <label for="chofer" class="form-label">Seleccionar Chofer:</label>
            <select id="chofer" name="chofer" class="form-select" required>
                <option value="1">Juan Pérez</option>
                <option value="2">María López</option>
            </select>
            <div class="invalid-feedback">Por favor, seleccione un chofer.</div>
        </div>

        <div class="mb-3">
            <label for="documento" class="form-label">Subir Documento:</label>
            <input type="file" id="documento" name="documento" class="form-control" required />
            <div class="invalid-feedback">Por favor, suba un documento.</div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Asignar</button>
    </form>
</div>
