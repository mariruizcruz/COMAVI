@{
    Layout = "~/Views/Shared/_Layout_Externo.cshtml";
    ViewData["Title"] = "Register - Sistema Administrativo";
}

<div class="container" style="display:flex; justify-content:center; align-items:center">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Crea una cuenta!</h1>
                        </div>
                        <form class="user">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" id="exampleFirstName"
                                            placeholder="Primer Nombre">
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control form-control-user" id="exampleLastName"
                                            placeholder="Apellido">
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control form-control-user" id="exampleInputEmail"
                                        placeholder="Correo Electronico">
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="password" class="form-control form-control-user"
                                            id="exampleInputPassword" placeholder="Contraseña">
                                </div>
                                <div class="col-sm-6">
                                    <input type="password" class="form-control form-control-user"
                                           id="exampleRepeatPassword" placeholder="Repita la Contraseña">
                                </div>
                            </div>
                            <a href="@Url.Action("Login", "Login")" class="btn btn-primary btn-user btn-block">
                                Resgistrar cuenta
                            </a>
                            <hr>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-google btn-user btn-block">
                                <i class="fab fa-google fa-fw"></i> Resgistrar con Google
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-facebook btn-user btn-block">
                                <i class="fab fa-facebook-f fa-fw"></i> Resgistrar con Facebook
                            </a>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" href="@Url.Action("RestablecerContrasena", "Login")">Olvido la Contraseña?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="@Url.Action("Login", "Login")">Ya tiene una cuenta? Logeate!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
