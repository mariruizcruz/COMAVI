@{
    Layout = "~/Views/Shared/_Layout_Externo.cshtml";
    ViewData["Title"] = "Login - Sistema Administrativo";
}


<div class="container" style="display:flex; justify-content:center; align-items:center">

    <div class="row justify-content-center" style="width: 80%;">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Bienvenido de vuelta!</h1>
                                </div>
                                <form class="user">
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user"
                                                id="exampleInputEmail" aria-describedby="emailHelp"
                                                placeholder="Digite el Correo Electronico...">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user"
                                                id="exampleInputPassword" placeholder="Constraseña">
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="customCheck">
                                            <label class="custom-control-label" for="customCheck">
                                                Recuerdame

                                            </label>
                                        </div>
                                    </div>
                                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-user btn-block">
                                        Logeate
                                    </a>
                                    <hr>
                                    <a href="@Url.Action("Index", "Home")" class="btn btn-google btn-user btn-block">
                                        <i class="fab fa-google fa-fw"></i> Logeate con Google
                                    </a>
                                    <a href="@Url.Action("Index", "Home")" class="btn btn-facebook btn-user btn-block">
                                        <i class="fab fa-facebook-f fa-fw"></i> Logeate con Facebook
                                    </a>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("RestablecerContrasena", "Login")">Olvido la contraseña?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("Register", "Login")">Crea una cuenta!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

