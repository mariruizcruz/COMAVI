@{
    Layout = "~/Views/Shared/_Layout_Externo.cshtml";
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="container" style="display:flex; justify-content:center; align-items:center">
    <div class="row justify-content-center" style="width: 80%;">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">Olvidaste tu contraseña?</h1>
                                    <p class="mb-4">
                                        Lo entendemos, suceden cosas. Simplemente ingrese su dirección de correo electrónico a continuación
                                        ¡Y te enviaremos un enlace para restablecer tu contraseña!
                                    </p>
                                </div>
                                <form class="user">
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user"
                                               id="exampleInputEmail" aria-describedby="emailHelp"
                                               placeholder="Ingresar Email...">
                                    </div>
                                    <a href="@Url.Action("Login", "Login")" class="btn btn-primary btn-user btn-block">
                                        Resetear Contraseña
                                    </a>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("Register", "Login")">Crear una Cuenta!</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("Login", "Login")">Ya tienes una cuenta? Logeate!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
