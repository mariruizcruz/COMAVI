@{
    ViewData["Title"] = "Registrar Camión";
}

<h1 class="text-center my-4">Registrar Nuevo Camión</h1>
<div class="container">
    <form asp-action="RegistrarCamion" method="post" class="needs-validation my-4" novalidate>
        <div class="mb-3">
            <label for="marca" class="form-label">Marca:</label>
            <input type="text" id="marca" name="marca" class="form-control" required />
            <div class="invalid-feedback">Por favor, ingrese la marca.</div>
        </div>

        <div class="mb-3">
            <label for="modelo" class="form-label">Modelo:</label>
            <input type="text" id="modelo" name="modelo" class="form-control" required />
            <div class="invalid-feedback">Por favor, ingrese el modelo.</div>
        </div>

        <div class="mb-3">
            <label for="anio" class="form-label">Año:</label>
            <input type="number" id="anio" name="anio" class="form-control" min="1900" max="2099" required />
            <div class="invalid-feedback">Por favor, ingrese un año válido.</div>
        </div>

        <div class="mb-3">
            <label for="placa" class="form-label">Número de Placa:</label>
            <input type="text" id="placa" name="placa" class="form-control" required />
            <div class="invalid-feedback">Por favor, ingrese el número de placa.</div>
        </div>
        <div class="mb-3">
            <label for="documento" class="form-label">Subir Documento:</label>
            <input type="file" id="documento" name="documento" class="form-control" required />
            <div class="invalid-feedback">Por favor, suba un documento.</div>
        </div>
        <button type="submit" class="btn btn-primary w-100">Registrar</button>



    </form>

    <p id="success-message" class="alert alert-success mt-3" style="display: none;">¡Camión registrado exitosamente!</p>
</div>

<script>
    document.querySelector("form").onsubmit = function  (e) {
        e.preventDefault();
        document.getElementById("success-message").style.display = "block";
    };
</script>
